# 日本語を使用
export LANG=ja_JP.UTF-8

# editor
export EDITOR=vi

# config
HISTFILE=~/.history
HISTSIZE=3000
SAVEHIST=30000

# ターミナルをカラーにする
export CLICOLOR=true
export LSCOLORS=DxGxcxdxCxegedabagacad

# read local file
if [ -f ~/.rc_local ]; then
    . ~/.rc_local
fi


# for bash
if bash_shell_used; then

        # prompt
        export PS1="\h:\W "

# for zsh
else
        # 色を使用
        autoload -Uz colors
        colors

        # 補完
        autoload -Uz compinit
        compinit

        # ヒストリーに重複を表示しない
        setopt histignorealldups

        # cdコマンドを省略して、ディレクトリ名のみの入力で移動
        # setopt auto_cd

        # 自動でpushdを実行
        setopt auto_pushd

        # pushdから重複を削除
        setopt pushd_ignore_dups

        # コマンドミスを修正
        # setopt correct

        # prompt
        PROMPT='%m:%c$ '
        setopt prompt_subst

        # 補完表示後にカーソル移動可能にする
        zstyle ':completion:*:default' menu select=1

        # グロッビングによるエラー回避
        setopt nonomatch

fi
